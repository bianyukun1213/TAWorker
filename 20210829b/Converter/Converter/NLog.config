<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target name="logFile" xsi:type="File" fileName="Log.txt" layout="${longdate}|${level:uppercase=true}|${logger}|${threadid}|${message}${onexception:inner=|${exception:format=tostring}}" />
    <target name="logRichTextBox" xsi:type="RichTextBox" autoScroll="true" maxLines="0" controlName="logRichTextBox" formName="MainForm" useDefaultRowColoringRules="true" layout="${longdate}|${level:uppercase=true}|${logger}|${threadid}|${message}${onexception:inner=|${exception:format=tostring}" />
  </targets>

  <rules>
    <logger name="*" minlevel="Info" writeTo="logFile" />
    <logger name="*" minlevel="Info" writeTo="logRichTextBox" />
  </rules>
</nlog>